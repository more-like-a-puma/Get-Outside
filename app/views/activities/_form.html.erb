<div class="activity_form">
  <%= form_for @activity, :html => { :multipart => true } do |f| %>
    <p>
      <%= f.label :title %>
      <%= f.text_field :title, :required => true %>
    </p>
    <p>
      <%= f.label :image %>
      <%= cl_image_upload_tag :image, :required => true %>
    </p>
    <p>
      <%= f.label :equipment_list, "Equipment Needed" %> <br>
      <%= f.text_area :equipment_list, size: "30x8", :required => true %>
    </p>
    <p>
      <%= f.label :description %> <br>
      <%= f.text_area :description, size: "30x8", :required => true %>
    </p>

    <%= f.submit "Go on" %>
  <% end %>
</div>
